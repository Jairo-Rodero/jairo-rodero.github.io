---
// Button.astro
// Props opcionales para personalizar el bot√≥n
interface Props {
  text?: string;
  type?: 'button' | 'submit' | 'reset';
  onClick?: string;
}

const { 
  text = 'Click Me', 
  type = 'button',
  onClick 
} = Astro.props;
---

<button type={type} onclick={onClick} 
    class="bg-secondary font-inherit py-2 px-5 font-black text-lg border-3 border-black rounded-lg shadow-[0.1em_0.1em] cursor-pointer hover:-translate-x-[0.05em] hover:-translate-y-[0.05em] hover:shadow-[0.15em_0.15em] active:translate-x-[0.05em] active:translate-y-[0.05em] active:shadow-[0.05em_0.05em]"
>
  {text}
</button>
